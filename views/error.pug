// views/error.pug
doctype html
html
  head
    title Error
    style.
      body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f8f8;
        color: #333;
      }
      .error-container {
        text-align: center;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: white;
      }
      .error-container h1 {
        color: red;
      }
      .error-container a {
        color: #0066cc;
        text-decoration: none;
      }
      .error-container a:hover {
        text-decoration: underline;
      }
  body
    .error-container
      h1 Error
      p #{message}
      a(href="/") Return to login page
